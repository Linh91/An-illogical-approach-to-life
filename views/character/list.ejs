<!DOCTYPE html>
<html>
  <head>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
    <meta charset="utf-8">
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC|Exo|Righteous" rel="stylesheet">
    <link rel="stylesheet" href="../global.css">
    <link href="../hover-min.css" rel="stylesheet">

    <title></title>
  </head>
  <body ng-app="characterCreation" ng-controller="character">
  <div>
    {{ getCreatedChar() }}
    <h1> Character List </h1>
    <h2>{{char.name}}</h2>
    <br>
    xp: {{char.xp}}
    <br>
    attack: {{char.attack}}
    <br>
    defence: {{char.defence}}
    <br>
    HP: {{char.hp}}
  </div>

    <form action="/choose-character" method="get">
      <input type="hidden" name="id" value="{{char._id}}">
      <input class="btn1 hvr-buzz" type="submit" value="To Battle Map">
    </form>

    <span ng-if="id > 0">
      <button class="btn1 leftButt" class="hvr-buzz" ng-click="getPrevChar()">Get prev Char</button>
    </span>

    <span ng-if="id < data.length-1">
      <button class="btn1 rightButt" class="hvr-buzz" ng-click="getNextChar()">Get next Char</button>
    </span>

    <form action="/character/new" method="get">
      <input class="btn1" class="hvr-buzz" type="submit" value="New Char">
    </form>
    <script>

    </script>
    <script src="../app.js"></script>
    <script src="../listView.js"></script>
  </body>
</html>
